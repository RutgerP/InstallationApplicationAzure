{% set INSTANCE_TEMPLATE = env['name'] + ENV['CI_BUILD_ID'] %}

resources:
- name: {{ INSTANCE_TEMPLATE }}
  type: compute.v1.instanceTemplate
  properties:
    properties:
      machineType: {{ properties['machineType'] }}
      disks:
      - deviceName: boot
        boot: true
        type: PERSISTENT
        autoDelete: true
        mode: READ_WRITE
        initializeParams:
          sourceImage: {{ properties['image'] }}
      networkInterfaces:
      - network: global/networks/default
      serviceAccounts:
      - email: "default"
        scopes:
        - "https://www.googleapis.com/auth/cloud-platform"
        
      tags:
        items:
        - http-server

